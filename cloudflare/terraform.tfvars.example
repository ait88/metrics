# CloudFlare API token (Create this with Zone:DNS permissions for your domain)
cloudflare_api_token = "your-cloudflare-api-token"

# CloudFlare Zone ID (Found in the dashboard under "Domain Summary")
cloudflare_zone_id = "your-zone-id"

# Domain name to use (e.g., example.com)
domain_name = "example.com"

# IP address of the frontend server (will be populated by the main Terraform module)
frontend_ip = "1.2.3.4"

# Optional: Change this if you want a different subdomain prefix
# subdomain_prefix = "monitoring"