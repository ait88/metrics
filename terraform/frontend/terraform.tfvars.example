# Example Terraform variables file
# Copy this file to terraform.tfvars and update the values

vultr_api_key = "your_vultr_api_key"
region = "ewr"  # New Jersey (Newark) - change to your preferred region
plan_id = "vc2-1c-1gb"  # 1 CPU, 1 GB RAM - adjust based on your needs
ssh_key_id = "12345678"  # Your SSH key ID in Vultr

# List of IP addresses allowed to SSH into the instance
# Replace with your own IP(s) for production
allowed_ssh_ips = [
  "203.0.113.1/32",  # Example IP address
  "198.51.100.0/24"  # Example IP range
]
